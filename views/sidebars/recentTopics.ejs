<section class="box">
	<header>
		<h3>Recent Topics</h3>
	</header>
	<div class="content">
		<ul class="list-unstyled">
			<% if (typeof res.locals.recentTopics != 'undefined') { %>
				<% _.each(res.locals.recentTopics, function (topic) { %>
					<li class="clearfix recent-topic">
						<div class="pull-left">
							<div class="avatar">
								<img width="149" height="198" src="/<%= topic.author.username %>/small.png" alt="" />
							</div>
						</div>
						<div class="pull-left marginLeft30">
							<p class="topic-name">
								<a href="/<%= topic.forum.name %>/<%= topic.name %>-<%= topic.id %>/1">
									<%= topic.name %>
								</a>
							</p>
							<div class="topic-info">
								<a href="/user/<%= topic.author.username %>" class="user-link">
									<%= topic.author.username %>
								</a>
								<span title="<%=: topic.createdAt|date:'c' %>" class="date">
									<%=: topic.createdAt|toDate %>
								</span>
							</div>
						</div>
					</li>
					<li class="seperator"></li>
					
				<% }) %>
			<% } else { %>
				<li class="recent-topic">
					<p class="alert alert-warning">
						No Topics Yet
					</p>
				</li>
			<% } %>
		</ul>		
	</div>
</section>